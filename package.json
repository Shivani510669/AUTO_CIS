{
  "name": "autocis",
  "version": "1.0.0",
  "description": "AI-Powered CIS Benchmark Compliance Tool",
  "main": "public/electron.js",
  "scripts": {
    "start": "concurrently \"npm run react\" \"wait-on http://localhost:3000 && electron . --no-sandbox\"",
    "react": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "package": "electron-builder",
    "package-linux": "electron-builder --linux",
    "package-win": "electron-builder --win",
    "package-all": "electron-builder -mwl"
  },
  "keywords": [
    "security",
    "compliance",
    "CIS",
    "automation",
    "AI"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1",
    "pdf-parse": "^1.1.1",
    "csv-parser": "^3.0.0",
    "shelljs": "^0.8.5",
    "pdfkit": "^0.13.0"
  },
  "devDependencies": {
    "react-scripts": "^5.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.autocis.guard",
    "productName": "AutoCIS Guard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "src/**/*",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "public/electron.js"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Security",
      "icon": "public/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.png"
    }
  }
}

